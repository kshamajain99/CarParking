<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#FFFFFF">


<TextView android:text="Available Parking Space:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/availnew"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <!--<Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button1"
        android:text="Register Car"
        android:layout_below="@+id/availnew"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:clickable="false"
        android:elegantTextHeight="false"
        android:drawableLeft="@drawable/register" />
-->

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/button1"
        android:src="@drawable/register"
        android:shadowDx="0"
        android:shadowDy="0"
        android:background="#FFFFFF"
        android:shadowRadius="5"
        android:scaleType="fitCenter"
        android:layout_marginTop="53dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Register"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/button1"
        android:layout_alignEnd="@+id/textView" />

    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:text="Search Car"
        android:layout_below="@+id/button1"
        android:layout_alignParentEnd="true" />-->

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/search"
        android:shadowColor="#A8A8A8"
        android:background="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:scaleType="fitCenter"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/availnew"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Search"
        android:textSize="30dp"
        android:id="@+id/textView1"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:text="Parking Availability"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true" />-->

    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Car Entry"
        android:id="@+id/addcar"
        android:layout_marginTop="0dp"
        android:layout_alignTop="@+id/delcar"
        android:layout_alignEnd="@+id/button3" />-->

    <ImageButton
        android:id="@+id/addcar"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="15dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/add_car"
        android:shadowColor="#A8A8A8"
        android:background="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:scaleType="fitCenter"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add Car"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/addcar"
        android:layout_alignEnd="@+id/textView2" />

    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Car Exit"
        android:id="@+id/delcar"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"/>-->

    <ImageButton

        android:id="@+id/delcar"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/sub_car"
        android:shadowColor="#A8A8A8"
        android:background="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/addcar"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignEnd="@+id/textView1"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Delete Car"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
